{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
	<div class="card">
		<h5 class="card-header text-center">
			Scripting
		</h5>
		<div class="card-body">
			{{ form_start(form)}}
			<div class="form-group row">
				<div class="col-sm-2 align-self-center">
					{{ form_label(form.name) }}
				</div>
				<div class="col-sm-10">
					{{ form_widget(form.name, { 'attr': { 'class' : 'form-control' } }) }}
				</div>
			</div>
			<div class="form-group row">
				<div class="col-sm-2 align-self-center">
					{{ form_label(form.description) }}
				</div>
				<div class="col-sm-10">
					{{ form_widget(form.description, { 'attr' : { 'class' : 'form-control', 'rows' : '10', 'cols': '80' } }) }}
				</div>
			</div>
			<div class="form-group row">
				<div class="col-sm-2 align-self-center">
					{{ form_label(form.code) }}
				</div>
				<div class="col-sm-10">
					{{ form_widget(form.code, { 'attr' : { 'class' : 'form-control', 'rows' : '10', 'cols': '80' } }) }}
				</div>
			</div>
			<div class="form-group row">
				<div class="col-sm-2 align-self-center">
					{{ form_label(form.path)}}
				</div>
				<div class="col-sm-10">
					{{ form_widget(form.path, { 'attr': {'class': 'form-control' } }) }}
				</div>
			</div>
			<div>
				<button id="saveScript" type="submit" class="btn btn-primary">Bewaren</button>
			</div>
			{{ form_end(form)}}
		</div>
	</div>
	{% if scripts| length > 0 %}
	<div class="containter mb-2 mt-2">
		{% for script in scripts %}
		<div class="row mb-1 mt-1">
			<div class="col-md-6">{{script.name}}</div>
			<div class="col-md-6">
				<a href="{{path('removescripting', {id: script.id})}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
			</div>
		</div>
		{% endfor %}
	</div>
	{% endif %}
</div>
{% endblock %}