<div class="modal fade" id="modalnewincident" tabindex="-1" aria-labelledby="modalnewincident" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-dialog-scrollable modal-xl">
    <div class="modal-content">
      <div class="modal-header">  
        <h5 class="modal-title text-center" id="exampleModalLabel">{{'fieldservice.index.button'|trans}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="reload()">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
         <div class="embed-responsive embed-responsive-16by9">
            {# Hier komt de newIncidentForm #}
                {% if device is defined %}
                  <iframe class="embed-responsive-item" id="createfieldservice" src="{{ app_sp2_url }}/fieldServices/createFieldServiceTicket.php?serial={{device.serialnumber}}&location={{device.schoollocation_id}}&lang={{app.user.locale}}"></iframe>
                {% elseif institution is defined %}
                  <iframe class="embed-responsive-item" id="createfieldservice" src="{{ app_sp2_url }}/fieldServices/createFieldServiceTicket.php?synergyid={{institution.synergyId}}&lang={{app.user.locale}}"></iframe>
                {% endif %}
         </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-3">
            <button type="button" class="btn btn-secondary text-left" data-dismiss="modal" onclick="reload()"><i class="fas fa-window-close"></i></button>
          </div>
        </div>  
      </div>
    </div>
    </form>
  </div>
</div>
<script type="text/javascript">
function reload() {
    document.getElementById('createfieldservice').src += '';
}
</script>