{% extends 'base.html.twig' %}

{% block body %}
<div class="container mb-3 mt-3">
    <div class="row">
        <div class="col-md-12 ml-md-auto">
            <div class="card">
                <h1 class="card-header text-center">
                    {% if title is defined %}
                    {{ title }}
                    {% else %}
                    {{'institutionLocation.form.title'|trans}}
                    {% endif %}
                </h1>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.institutionnumber)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.institutionnumber, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.institutionname) }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.institutionname, { 'attr': { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.address.street) }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.address.street, { 'attr': { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.address.number) }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.address.number, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.address.bus) }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.address.bus, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.address.zipcode) }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.address.zipcode, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.address.city) }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.address.city, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        
                        <div class="container-fluid mb-1 mt-1">
                            <div class="d-flex justify-content-around">
                            <div>
                                <button id="saveLocation" type="submit" class="btn btn-primary">{{'institutionLocation.form.label.save'|trans}}</button>
                            </div>
                            <div>
                                {{ form_row(form.reset, { 'attr' : { 'class' : 'btn btn-info' }}) }}
                            </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}