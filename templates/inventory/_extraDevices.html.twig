<div class="tab-pane fade" id="extraDevices" role="tabpanel" arial-labelledby="extraDevicesTab">
{% if extradevices|length > 0 %}
	<div class="mb-3 mt-3">
		<table class="table table-hover" id="extraDevicesTable" style="width: 100%">
			<thead class="thead">
				<tr class="bg-info">
					<th scope="col"></th>
					<th scope="col">{{'inventory.data.table.productnumber'|trans}}</th>
					<th scope="col">{{'inventory.data.table.brand'|trans}}</th>
					<th scope="col">{{'inventory.data.table.model'|trans}}</th>
					<th scope="col">{{'inventory.data.table.serial'|trans}}</th>
					<th scope="col">{{'inventory.data.table.supplier'|trans}}</th>
					<th scope="col">{{'inventory.data.table.user'|trans}}</th>
					<th scope="col">{{'inventory.data.table.type'|trans}}</th>
					<th scope="col">Vestiging</th>
					<th scope="col" class="text-center">
						<input type="checkbox" id="extraDevicesCheckAll" name="extraDevicesCheckAll"/>
					</th>
				</tr>
			</thead>
			<tbody>
			{% for item in extradevices %}
				<tr>
					<td class="text-center">
						<a href="{{path('invetoryExtraDeviceDetails', {id: item.id})}}"><i class="fas fa-search"></i></a>
					</td>
					<td>{{item.productnumber}}</td>
					<td>{{item.manufacturer}}</td>
					<td>{{item.model}}</td>
					<td>{{item.serialnumber}}</td>
					<td>{{item.supplier}}</td>
					{% if item.firstname and item.lastname %}
					<td class="text-center">{{ item.firstname }}&nbsp;<strong>{{ item.lastname }}</strong></td>
					{% else %}
					<td class="text-center">--</td>
					{% endif %}
					{% if item.type %}
					<td class="text-center">{{ item.type }}</td>
					{% else %}
					<td class="text-center">--</td>
					{% endif %}
					<td class="text-center">
						{% if item.institutionName %}
						{{ item.institutionName }}
						{% else %}
						--
						{% endif %}
					</td> 
					<td class="text-center">
						<input class="form-check-input" type="checkbox" value="{{item.id}}" id="{{item.id}}" name="extradevice[]"/>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
{% else %}
	<div class="container">
		<div class="jumbotron">
			<p>{{'loan.index.nodata'|trans}}</p>
		</div>
	</div>
{% endif %}
</div>