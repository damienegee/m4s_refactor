{% extends 'base.html.twig' %}

{% block body %}
<div class="container mb-3 mt-3">
    <div class="row">
        <div class="col-md-12 ml-md-auto">
            <div class="card">
                <h1 class="card-header text-center">
                    {{'loan.form.title'|trans}}
                </h1>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.startdate)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.startdate, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.user) }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.user, { 'attr': { 'class' : 'selectpicker', 'data-live-search' : true, 'title': 'Voor wie?', 'required' : true } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.deviceSerial) }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.deviceSerial, { 'attr': { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.enddate) }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.enddate, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-file">
                                {{ form_widget(form.images, { 'attr' : { 'class' : 'custom-file-input' } }) }}
                                <span class="custom-file-label">
                                    {{ form_label(form.images) }}
                                <span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.remark) }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.remark, { 'attr' : { 'class' : 'form-control', 'rows' : '3' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                <label for="signature-pad">{{'loan.form.signature'|trans}}</label>
                            </div>
                            <div class="col-sm-10" >
                                <canvas id="signature-pad" name="signature-pad" class="signature-pad" />
                            </div>
                        </div>
                        <div class="container-fluid mb-1 mt-1">
                            <div class="d-flex justify-content-around">
                            <div>
                                <button id="save" type="submit" class="btn btn-primary">{{'loan.form.save'|trans}}</button>
                            </div>
                            <div>
                                {{ form_row(form.reset, { 'attr' : { 'class' : 'btn btn-info' }}) }}
                            </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}