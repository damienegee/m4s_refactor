<div class="modal fade" id="selectDeviceModal" tabindex="-1" aria-labelledby="selectDeviceModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="selectDeviceModalLabel">{{'inventory.devices.selectmodal.title'|trans}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{ form_start(deviceForm) }}
        <div class="form-group row">
            <div class="col-sm-2 align-self-center">
                {{ form_label(deviceForm.device) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(deviceForm.device, { 'attr': { 'class' : 'selectpicker', 'data-live-search' : true, 'title': 'inventory.devices.selectmodal.title'|trans, 'required' : true } }) }}
            </div>
        </div>
        <div>
            <button id="saveDevice" type="submit" class="btn btn-primary">{{'inventory.devices.selectmodal.save'|trans}}</button>
        </div>
        {{ form_end(deviceForm) }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{'inventory.devices.selectmodal.close'|trans}}</button>
      </div>
    </div>
  </div>
</div>