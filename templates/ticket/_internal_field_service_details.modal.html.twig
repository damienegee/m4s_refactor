{% if ticket %}
<div class="modal fade" id="modal{{ticket.id}}" tabindex="-1" aria-labelledby="modal{{ticket.id}}" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollablemodal-xl">
    <div class="modal-content">
      <div class="modal-header">  
        <h5 class="modal-title text-center" id="exampleModalLabel">{{ticket.problem}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
            <div class="card">
				<div class="card-body">
					<div class="card-text">{{ticket.description|raw}}</div>
					{{ render(controller("App\\Controller\\TicketController::updateInteralTicketState", {id: ticket.id})) }}
				</div>
			</div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-3">
            <button type="button" class="btn btn-secondary text-left" data-dismiss="modal"><i class="fas fa-window-close"></i></button>
          </div>
        </div>  
      </div>
    </div>
  </div>
</div>
{% endif %}