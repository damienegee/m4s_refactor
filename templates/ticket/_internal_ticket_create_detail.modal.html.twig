<div class="modal fade" id="modalnewticket" tabindex="-1" aria-labelledby="modalnewticketLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-dialog-scrollable modal-xl">
    <div class="modal-content">
      <div class="modal-header">  
        <h5 class="modal-title text-center" id="modalnewticketLabel">{{'fieldservice.index.button'|trans}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
        	{{form_start(createTicketForm)}}
			<div class="form-group row">
				<div class="col-12 col-md-2">
				{{ form_label(createTicketForm.problem)}}
				</div>
				<div class="col-12 col-md-10">
				{{form_widget(createTicketForm.problem)}}
				</div>
            </div>
			<div class="form-group row">
				<div class="col-12">
				{{form_widget(createTicketForm.description)}}
				</div>
            </div>
			<div class="form-group row">
				<div class="col-12 col-md-2">
					{{form_label(createTicketForm.device)}}
				</div>
				<div class="col-12 col-md-10">
					{{form_widget(createTicketForm.device, { 'attr': { 'class' : 'selectpicker', 'data-live-search' : true, 'title': 'Serialnumber', 'required' : true } })}}
				</div>
			</div>
			<div class="form-group row">
				<div class="col-12 col-md-2">
					{{form_label(createTicketForm.state)}}
				</div>
				<div class="col-12 col-md-10">
					{{form_widget(createTicketForm.state)}}
				</div>
			</div>
			<div class="form-group row ">
				<div class="col-12 col-md-6 text-left">
				{{form_widget(createTicketForm.save)}}
				</div>
				<div class="col-12 col-md-6 text-right">
				{{form_widget(createTicketForm.reset)}}
				</div>
            </div>
			{{form_end(createTicketForm)}}
        </div>
      </div>
    </div>
    </form>
  </div>
</div>