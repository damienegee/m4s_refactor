{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mb-3 mt-3">
		<div class="card">
			<h5 class="card-header text-center">
				{{ 'school_settings.settings'|trans }}
			</h5>
			<div class="card-body">
				{{ form_start(form) }}
					<div class="form_group ">
						<div class="col-md-12 mb-3">
							{{ form_row(form.use_school_facturation_default, {'attr': {'class': ''}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="col-md-8 col-md-offset-4">
							<button type="submit" class="btn btn-primary">
								<span>{{ 'inventory.form.label.save'|trans }}</span>
							</button>
						</div>
					</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
