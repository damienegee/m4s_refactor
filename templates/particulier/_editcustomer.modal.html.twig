<div class="modal fade" id="editCustomerModal" tabindex="-1" aria-labelledby="editCustomerModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editCustomerModalLabel">{{'customer.modal.title'|trans}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
	  {{ form_start(editForm) }}
	  	<div class="form-group row">
			<div class="col-sm-2 align-self-center">
                {{ form_label(editForm.firstname) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(editForm.firstname, { 'attr': {'class': 'form-control' } }) }}
            </div>
		</div>
		<div class="form-group row">
			<div class="col-sm-2 align-self-center">
                {{ form_label(editForm.lastname) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(editForm.lastname, { 'attr': {'class': 'form-control' } }) }}
            </div>
		</div>
		<div class="form-group row">
			<div class="col-sm-2 align-self-center">
                {{ form_label(editForm.email) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(editForm.email, { 'attr': {'class': 'form-control' } }) }}
            </div>
		</div>
		<div class="form-group row">
			<div class="col-sm-2 align-self-center">
				{{ form_label(editForm.type) }}
			</div>
			<div class="col-sm-10">
				{{ form_widget(editForm.type, { 'attr' : { 'class' : 'custom-select' } }) }}
			</div>
		</div>
    {% if editForm.freefieldtag01 is defined %}
    <div class="form-group row">
			<div class="col-sm-2 align-self-center">
                {{ form_label(editForm.freefieldtag01) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(editForm.freefieldtag01, { 'attr': {'class': 'form-control' } }) }}
            </div>
		</div>
    {% endif %}
    {% if editForm.freefieldtag02 is defined %}
    <div class="form-group row">
			<div class="col-sm-2 align-self-center">
                {{ form_label(editForm.freefieldtag02) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(editForm.freefieldtag02, { 'attr': {'class': 'form-control' } }) }}
            </div>
		</div>
    {% endif %}
    {% if editForm.freefieldtag03 is defined %}
    <div class="form-group row">
			<div class="col-sm-2 align-self-center">
                {{ form_label(editForm.freefieldtag03) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(editForm.freefieldtag03, { 'attr': {'class': 'form-control' } }) }}
            </div>
		</div>
    {% endif %}
    {% if editForm.freefieldtag04 is defined %}
    <div class="form-group row">
			<div class="col-sm-2 align-self-center">
                {{ form_label(editForm.freefieldtag04) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(editForm.freefieldtag04, { 'attr': {'class': 'form-control' } }) }}
            </div>
		</div>
    {% endif %}
    {% if editForm.freefieldtag05 is defined %}
    <div class="form-group row">
			<div class="col-sm-2 align-self-center">
                {{ form_label(editForm.freefieldtag05) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(editForm.freefieldtag05, { 'attr': {'class': 'form-control' } }) }}
            </div>
		</div>
    {% endif %}
	  	<div class="container-fluid mb-1 mt-1">
			<div class="d-flex justify-content-around">
			<div>
				<button id="updatePerson" type="submit" class="btn btn-primary">{{'customer.form.save'|trans}}</button>
			</div>
			<div>
				{{ form_row(editForm.reset, { 'attr' : { 'class' : 'btn btn-info' }}) }}
			</div>
			</div>
		</div>
	  {{ form_end(editForm) }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{'customer.modal.close'|trans}}</button>
      </div>
    </div>
  </div>
</div>