{% extends 'base.html.twig' %}

{% block body %}
<div class="container mb-3 mt-3">
    <div class="row">
        <div class="col-md-12 ml-md-auto">
            <div class="card">
                <h1 class="card-header text-center">
                    {{'returnedLoan.form.title'|trans}}
                </h1>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.returneddate)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.returneddate, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-file">
                                {{ form_widget(form.images, { 'attr' : { 'class' : 'custom-file-input' } }) }}
                                <span class="custom-file-label">
                                    {{ form_label(form.images) }}
                                <span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.remarks) }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.remarks, { 'attr' : { 'class' : 'form-control', 'rows' : '3' } }) }}
                            </div>
                        </div>
                        <div class="container-fluid mb-1 mt-1">
                            <div class="d-flex justify-content-around">
                            <div>
                                <button id="save" type="submit" class="btn btn-primary">{{'returnedLoan.form.label.save'|trans}}</button>
                            </div>
                            <div>
                                {{ form_row(form.reset, { 'attr' : { 'class' : 'btn btn-info' }}) }}
                            </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}