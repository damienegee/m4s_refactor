<div class="modal fade" id="modalMoveDevice" tabindex="-1" aria-labelledby="modalMoveDeviceLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalMoveDeviceLabel">{{'movedevice.modal.title'|trans}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{ form_start(moveForm) }}
            <div class="form-group row">
                <div class="col-sm-4 align-self-center">
                    {{ form_label(moveForm.deviceId)}}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(moveForm.deviceId, { 'attr' : {'class': 'form-control'} })}}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 align-self-center">
                    {{ form_label(moveForm.deviceSerial)}}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(moveForm.deviceSerial, { 'attr' : {'class': 'form-control'} })}}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 align-self-center">
                    {{ form_label(moveForm.fromLocationName)}}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(moveForm.fromLocationName, { 'attr' : {'class': 'form-control'} })}}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 align-self-center">
                    {{ form_label(moveForm.toLocationName)}}
                </div>
                <div class="col-sm-8">
                    {# {{ form_widget(moveForm.toLocationName, { 'attr' : {'class': 'form-control'} })}} #}
                    {{ form_widget(moveForm.toLocationName, { 'attr': { 'class' : 'selectpicker', 'data-live-search' : true, 'title': 'Waar?' } }) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 align-self-center">
                    {{ form_label(moveForm.whenMoved)}}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(moveForm.whenMoved, { 'attr' : {'class': 'form-control'} })}}
                </div>
            </div>
            {% if device is defined and device.customer_id %}
                <div class="form-group row">
                    <div class="col-sm-4 align-self-center">
                        {{ form_label(moveForm.moveCustomer)}}
                    </div>
                    <div class="col-sm-8">
                        {{ form_widget(moveForm.moveCustomer, { 'attr' : {'class': 'form-control'} })}}
                    </div>
                </div>
            {% endif %}
            <div>
                <button id="saveMoved" type="submit" class="btn btn-primary">{{'movedevice.modal.form.save'|trans}}</button>
            </div>
        {{ form_end(moveForm) }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{'movedevice.modal.form.close'|trans}}</button>
      </div>
    </div>
  </div>
</div>