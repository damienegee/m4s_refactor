{% extends 'base.html.twig' %}

{% block body %}
<div class="container mb-3 mt-3">
    <div class="row">
        <div class="col-md-12 ml-md-auto">
            <div class="card">
                <h1 class="card-header text-center">
                    {{'inventory.form.title'|trans}}
                </h1>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.label)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.label, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.hostname)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.hostname, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.serialnumber)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.serialnumber, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.productCode)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.productCode, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.model)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.model, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.motherboardValue)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.motherboardValue, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.memoryValue)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.memoryValue, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.hddValue)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.hddValue, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.panelAssemblyValue)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.panelAssemblyValue, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.mac1)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.mac1, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 align-self-center">
                                {{ form_label(form.mac2)}}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.mac2, { 'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>
                        
                        <div class="container-fluid mb-1 mt-1">
                            <div class="d-flex justify-content-around">
                            <div>
                                <button id="saveDevice" type="submit" class="btn btn-primary">{{'inventory.form.label.save'|trans}}</button>
                            </div>
                            <div>
                                {{ form_row(form.reset, { 'attr' : { 'class' : 'btn btn-info' }}) }}
                            </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}