<!-- Modal -->
<div class="modal fade" id="addReleaseNoteModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="addReleaseNoteLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl" style="overflow-y: initial;">
    <div class="modal-content" style="max-height: 80vh; overflow-y: auto;">
      <div class="modal-header">
        <h5 class="modal-title" id="addReleaseNoteLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{ form_start(form, {'action': path('admin_release_notes')}) }}
        <div class="form-group row">
          {{form_label(form.version, 'Versie', {'label_attr' : {'class' : 'col-12 col-md-2 col-form-label'}})}}
          {{form_widget(form.version, {'attr': {'class' : 'form-control col-12 col-md-10'} } )}}
        </div>
        {% set lang = explodeEnv(app_enabledlang) %}
        {% for l in lang %}
        <div class="form-group row">
          {% set langname = "title_"~l%}
          {{form_label(form[langname], 'Titel '~l|upper , {'label_attr' : {'class' : 'col-12 col-md-2 col-form-label'}})}}
			    {{form_widget(form[langname], {'attr': {'class' : 'form-control col-12 col-md-10'} } )}}
        </div>
        <div class="form-group">
          {% set langname = "description_"~l%}
          {{form_label(form[langname], 'Description '~l|upper , {'label_attr' : {'class' : 'col-12 col-form-label'}})}}
			    {{form_widget(form[langname], {'attr': {'class' : 'form-control col-12'} } )}}
        </div>
        {% endfor %}
        <div class="form-group">
          {{form_row(form.submit)}}
        </div>
		    {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>